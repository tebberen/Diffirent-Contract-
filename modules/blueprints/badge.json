{
  "name": "BadgeModule",
  "version": "1.0.0",
  "category": "reputation",
  "moduleType": "attestation",
  "premium": true,
  "inputSchema": {
    "type": "object",
    "properties": {
      "badgeType": { "type": "string" },
      "metadataUri": { "type": "string" },
      "recipient": { "type": "string", "format": "address" }
    },
    "required": ["badgeType", "recipient"],
    "additionalProperties": false
  },
  "outputSchema": {
    "type": "object",
    "properties": {
      "badgeId": { "type": "string" },
      "status": { "type": "string" }
    }
  },
  "eventSchema": [
    {
      "name": "BadgeIssued",
      "parameters": [
        { "name": "issuer", "type": "address", "indexed": true },
        { "name": "recipient", "type": "address", "indexed": true },
        { "name": "badgeType", "type": "bytes32", "indexed": false }
      ]
    }
  ],
  "abiAssumptions": [
    "function issue(address recipient, bytes32 badgeType, string calldata metadataUri) external",
    "function revoke(uint256 badgeId) external"
  ],
  "exampleUsage": "Başarı rozetleri topluluğa dağıtılır, soulbound badge opsiyonu açıktır.",
  "integrationNotes": "Badge olayı Talent Protocol profil rozetlerine yansıtılır; Self XYZ kimlik doğrulaması ile bağlanır."
}
