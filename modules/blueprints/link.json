{
  "name": "LinkModule",
  "version": "1.0.0",
  "category": "social",
  "moduleType": "registry",
  "premium": false,
  "inputSchema": {
    "type": "object",
    "properties": {
      "url": { "type": "string", "format": "uri" },
      "title": { "type": "string" },
      "tags": { "type": "array", "items": { "type": "string" } }
    },
    "required": ["url"],
    "additionalProperties": false
  },
  "outputSchema": {
    "type": "object",
    "properties": {
      "linkId": { "type": "string" },
      "owner": { "type": "string", "format": "address" }
    }
  },
  "eventSchema": [
    {
      "name": "LinkAdded",
      "parameters": [
        { "name": "owner", "type": "address", "indexed": true },
        { "name": "url", "type": "string", "indexed": false },
        { "name": "hash", "type": "bytes32", "indexed": false }
      ]
    }
  ],
  "abiAssumptions": [
    "function addLink(string calldata url, string calldata title, string[] calldata tags) external",
    "function removeLink(uint256 linkId) external"
  ],
  "exampleUsage": "Kullanıcı profillerindeki link koleksiyonları LinkModule ile yönetilir.",
  "integrationNotes": "Celo AI güvenlik taraması URL'leri doğrular; Self XYZ reputasyon puanları kötü linkleri etkiler."
}
