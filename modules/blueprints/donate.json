{
  "name": "DonateModule",
  "version": "1.0.0",
  "category": "support",
  "moduleType": "payment",
  "premium": false,
  "inputSchema": {
    "type": "object",
    "properties": {
      "recipient": { "type": "string", "format": "address" },
      "token": { "type": "string", "format": "address" },
      "amount": { "type": "string", "pattern": "^\\d+$" }
    },
    "required": ["recipient", "amount"],
    "additionalProperties": false
  },
  "outputSchema": {
    "type": "object",
    "properties": {
      "receiptId": { "type": "string" },
      "amount": { "type": "string" },
      "token": { "type": "string", "format": "address" }
    }
  },
  "eventSchema": [
    {
      "name": "Donation",
      "parameters": [
        { "name": "donor", "type": "address", "indexed": true },
        { "name": "recipient", "type": "address", "indexed": true },
        { "name": "token", "type": "address", "indexed": false },
        { "name": "amount", "type": "uint256", "indexed": false }
      ]
    }
  ],
  "abiAssumptions": [
    "function donate(address recipient, address token, uint256 amount) external payable",
    "function setDefaultRecipient(address recipient) external"
  ],
  "exampleUsage": "MainHub üzerinden DonateModule'a bağlanıp bağış sepetleri oluşturun.",
  "integrationNotes": "Self XYZ API ile bağış eşleşmeleri yapılır; Celo Pay webhook'u fiat→krypto dönüşümleri için kullanılır."
}
