{
  "name": "DeployModule",
  "version": "1.0.0",
  "category": "infrastructure",
  "moduleType": "automation",
  "premium": true,
  "inputSchema": {
    "type": "object",
    "properties": {
      "artifact": { "type": "string" },
      "network": { "type": "string" },
      "salt": { "type": "string", "pattern": "^0x[a-fA-F0-9]{64}$" }
    },
    "required": ["artifact", "network"],
    "additionalProperties": false
  },
  "outputSchema": {
    "type": "object",
    "properties": {
      "deploymentAddress": { "type": "string", "format": "address" },
      "txHash": { "type": "string" }
    }
  },
  "eventSchema": [
    {
      "name": "ModuleDeployed",
      "parameters": [
        { "name": "operator", "type": "address", "indexed": true },
        { "name": "deploymentAddress", "type": "address", "indexed": true },
        { "name": "artifact", "type": "bytes32", "indexed": false }
      ]
    }
  ],
  "abiAssumptions": [
    "function deploy(bytes calldata bytecode, bytes32 salt) external returns (address)",
    "function predict(bytes32 salt) external view returns (address)"
  ],
  "exampleUsage": "Cursor/Codex tarafından üretilen bytecode bu modül üzerinden zincire basılır.",
  "integrationNotes": "Deployment sonuçları GitHub Actions loglarına push edilir; Self XYZ audit kayıtlarına aktarılır."
}
